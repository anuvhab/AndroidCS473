<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Day3.ShoppingActivity"
    android:columnCount="2"
    android:layout_margin="5dp">


    <ImageView
        android:id="@+id/imageelectronics"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_column="0"
        android:layout_row="1"
        app:srcCompat="@drawable/electronics"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:onClick="electronicsClick"/>

    <TextView
        android:id="@+id/textelectronics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:textSize="25sp"
        android:gravity="center"
        android:text="Electronics"
        android:layout_margin="15dp"/>

    <ImageView
        android:id="@+id/imageclothing"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_column="1"
        android:layout_row="1"
        app:srcCompat="@drawable/clothing"
        android:layout_margin="10dp"
        android:onClick="clothingClick"/>
    <TextView
        android:id="@+id/textclothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:textSize="25sp"
        android:gravity="center"
        android:text="clothing"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/imagebeauty"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_column="0"
        android:layout_row="2"
        app:srcCompat="@drawable/beauty"
        android:layout_margin="10dp"
        android:onClick="beautyClick"/>

    <TextView
        android:id="@+id/textbeauty"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_margin="10dp"
        android:text="Beauty"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imagefood"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_column="1"
        android:layout_row="2"
        app:srcCompat="@drawable/foods"
        android:layout_margin="10dp"

        android:onClick="foodClick"/>

    <TextView
        android:id="@+id/textfood"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_margin="10dp"
        android:text="food"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textviewwelcomename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:gravity="right"
        android:layout_margin="10dp"
        />
</GridLayout>